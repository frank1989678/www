/* pages/a/orderList/orderList.wxss */
.wrap{background-color:#f5f5f5;}

.bg{height:360rpx;text-align:center;font-size:24rpx;color:#fff;background:linear-gradient(45deg,#e8645f 0%,#fa9b7a 100%) no-repeat;background-size:100% auto;overflow:hidden;}
.bg .hd{padding-top:36rpx;}
.bg .hd .score{position:relative;display:inline-block;width:120rpx;height:120rpx;line-height:120rpx;background-color:#fff;border-radius:50%;font-size:54rpx;color:#e8645f;}
.bg .hd .score:before{content:'';position:absolute;top:-10rpx;right:-10rpx;bottom:-10rpx;left:-10rpx;border-radius:50%;background-color:rgba(255,255,255,.2);}
.bg .hd .score:after{content:'';position:absolute;left:50%;top:230rpx;width:2rpx;height:30rpx;background-color:#fff;}
.bg .hd .unit{margin:0 -40rpx 0 20rpx;}
.bg .bd{float:left;width:50%;}
.bg .bd .score{font-size:44rpx;}
.bg .mt{margin-top:20rpx;}

.frown{padding-top:80rpx;text-align:center;color:#fa9b7a;}
.frown .ico{width:254rpx;height:260rpx;margin-bottom:40rpx;}

.list{padding:1rpx;}
.list .li{margin:20rpx 30rpx;padding:0 30rpx;background-color:#fff;border-radius:10rpx;}
.list .hd{position:relative;padding:20rpx 0;border-bottom:1rpx solid #e2e2e2;}
.list .hd .img{width:90rpx;height:90rpx;border-radius:50%;vertical-align:middle;margin-right:30rpx;}
.list .hd .ico{position:absolute;top:40rpx;right:0;}
.list .bd{position:relative;line-height:88rpx;text-align:right;padding-right:40rpx;}
.list .bd .for{position:absolute;top:0;left:0;color:#9b9594;}
.list .bd .ico{position:absolute;top:22rpx;right:-10rpx;}
.list .bd .btn{position:absolute;top:33rpx;bottom:33rpx;right:-10rpx;width:100rpx;}


.button{padding:20rpx 75rpx;text-align:center;}
.button .tips{color:#e8645f;display:block;padding-top:10rpx;font-size:20rpx;}