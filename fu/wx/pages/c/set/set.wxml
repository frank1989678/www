<!--pages/c/set/set.wxml-->
<view class="wrap">
	<view class="item avatar">
		<text class="for">头像</text>
		<view class="txt" bindtap="setAvatar">
			<image class="img" src="{{avatarUrl}}"></image>
		</view>
	</view>
	
	<view class="info">
		<view class="item">
			<text class="for">昵称</text>
			<view class="txt">
				{{nickName}}
				<i class="ico ico-arrow-right"></i>
				<i class="btn" bindtap="setNickname"></i>
			</view>
		</view>
		<view class="item">
			<text class="for">性别</text>
			<view class="txt">
				{{gender}}
				<i class="ico ico-arrow-right"></i>
				<i class="btn" bindtap="setSex"></i>
			</view>
		</view>
		<view class="item">
			<text class="for">生日</text>
			<view class="txt">
				<picker mode="date" value="{{date}}" bindchange="setBirthday">
					<view class="picker">
						{{birthday}}
					</view>
				</picker>
				<i class="ico ico-arrow-right"></i>
			</view>
		</view>
		<view class="item">
			<text class="for">星座</text>
			<view class="txt">
				<picker mode="date" value="{{date}}" bindchange="setBirthday">
					<view class="picker">
						{{constellation}}
					</view>
				</picker>
				<i class="ico ico-arrow-right"></i>
			</view>
		</view>
		<view class="item">
			<text class="for">所在地</text>
			<view class="txt">
				<picker mode="region" value="{{region}}" bindchange="setRegion">
					<view class="picker">
						{{city}}，{{province}}，{{country}}
					</view>
				</picker>
				<i class="ico ico-arrow-right"></i>
			</view>
		</view>
		<view class="item">
			<text class="for">手机</text>
			<text class="txt">1502219822</text>
		</view>
	</view>

</view>

<modal hidden="{{model1}}" confirm-text="确定" cancel-text="取消" bindconfirm="saveNickName" bindcancel="closeModel" id="model1">
	<div class="main">
    	<input id="_nickName" class="ipt" placeholder-style="placeholder" placeholder="请输入昵称..." bindblur="changeInput" />
	</div>
</modal>