<!--index.wxml-->
<view class="info">
	<view class="row">
		<text class="num">{{score}}</text>分
		<text class="sub">综合评分</text>
	</view>
	<view class="col">
		<text class="num">{{count}}</text>单
		<text class="sub">本周成功订单</text>
	</view>
	<view class="col">
		<text class="num">{{income}}</text>元
		<text class="sub">本周收入</text>
	</view>
</view>

<view class="button">
	<button class="ubtn">新增接单方式</button>	
</view>

<view class="form">
	<view class="item" wx:for="{{gameList}}">
		<text>{{item.icon}}{{item.val}}</text>	
		<switch class="abs" checked="{{item.checked}}" bindchange="onSwitch" />
	</view>

	<view class="item">
		<text>价格：</text>
		<wtext class="abs">{{price}}元</wtext>
	</view>
	<view class="item">
		<text>单位：</text>
		<wtext class="abs">{{unitVal}}</wtext>
	</view>
</view>

<view class="button">
	<button class="ubtn">开始接单</button>	
</view>